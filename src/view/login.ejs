
<!DOCTYPE html>
<html lang="en">
  <head>
      <% include partials/head %>
  </head>
  <body class="container">
  <section id="cover">
    <div id="form">
      <div class="row text-white">
        <div class="mx-auto text-center" id="contour">
          <h3>Please log in to your account</h3>
          <hr/>
          <form class="justify-content-center" action="/login" method="post">
            <div class="px-2">
              <div class="form-group">
                <label class="col-sm-3" for="form_username">Username:</label>
                  <input id="form_username" type="text" name="username" class="form-control" required/>
              </div>
              <div class="form-group">
                <label class="col-sm-3" for="form_password">Password:</label>
                <input id="form_password" type="password" name="password" class="form-control" required/>
              </div>
              <br>
              <button class="btn btn-primary" type="submit" value="Submit">Connect</button>
            </div>
          </form>
          <hr/>
          <button class="btn btn-success" type="submit"  onClick='document.location.href="/signup"'>
            Create an account
          </button>
        </div>
      </div>
    </div>
    </section>
    </body>
  </html>