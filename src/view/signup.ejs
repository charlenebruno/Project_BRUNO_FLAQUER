<!DOCTYPE html>
<html lang="en">
  <head>
      <% include partials/head %>
  </head>
  <body class="container">
  <section id="cover">
    <div id="form">
      <div class="row text-white">
        <div class="mx-auto text-center" id="contour">
          <h3>Create your account</h3>
          <hr/>
          <form action="/user" method="post">
            <div class="px-20">
              <div class="form-group">
                <label class="col-sm-4" for="form_email">Email:</label>
                  <input id="form_email" type="email" name="email" class="form-control" required/>
              </div>
              <div class="form-group">
                <label class="col-sm-6" for="form_username">Username:</label>
                <input id="form_username" type="text" name="username" class="form-control" required/>
              </div>
              <div class="form-group">
                <label class="col-sm-6" for="form_password">Password:</label>
                <input id="form_password" type="password" name="password" class="form-control" required/>
              </div>
              <br>
              <button class="btn btn-primary" type="submit" value="Submit" id="submit">Sign up</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    </section>
    </body>
  </html>